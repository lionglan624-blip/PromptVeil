<Window x:Class="Promptveil.Windows.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calibration"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">

    <Grid>
        <!-- Reference marker (crosshair) -->
        <Canvas x:Name="MarkerCanvas">
            <Line x:Name="HorizontalLine"
                  Stroke="#FF0000"
                  StrokeThickness="1"
                  StrokeDashArray="4,2"/>
            <Line x:Name="VerticalLine"
                  Stroke="#FF0000"
                  StrokeThickness="1"
                  StrokeDashArray="4,2"/>
        </Canvas>

        <!-- Info panel -->
        <Border Background="#CC1E1E1E"
                CornerRadius="5"
                Padding="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="キャリブレーションモード"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="OffsetText"
                           Text="オフセット: X=0, Y=0"
                           Foreground="#CCCCCC"
                           FontFamily="Consolas"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Foreground="#888888"
                           FontSize="11"
                           TextAlignment="Center">
                    <Run Text="矢印キー: 1px移動"/>
                    <LineBreak/>
                    <Run Text="Shift+矢印: 10px移動"/>
                    <LineBreak/>
                    <Run Text="Enter: 確定 / Esc: キャンセル"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Input preview area -->
        <Border x:Name="PreviewBorder"
                Background="#E01E1E1E"
                BorderBrush="#FF0000"
                BorderThickness="1"
                VerticalAlignment="Bottom"
                Margin="10,0,10,50">
            <Grid Margin="5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&gt;"
                           Foreground="#888888"
                           FontFamily="Consolas"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <TextBlock Grid.Column="1"
                           Text="入力エリアのプレビュー"
                           Foreground="#666666"
                           FontFamily="Consolas"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
