<Application x:Class="Promptveil.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://schemas.hardcodet.net/taskbar"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <!-- Tray Context Menu -->
        <ContextMenu x:Key="TrayMenu">
            <MenuItem x:Name="ToggleMenuItem" Header="オーバーレイ表示/非表示" Click="ToggleOverlay_Click"/>
            <MenuItem Header="キャリブレーション (Ctrl+Alt+C)" Click="Calibration_Click"/>
            <Separator/>
            <MenuItem x:Name="PauseMenuItem" Header="一時停止" Click="Pause_Click"/>
            <MenuItem Header="設定を再読み込み" Click="ReloadConfig_Click"/>
            <Separator/>
            <MenuItem Header="終了" Click="Exit_Click"/>
        </ContextMenu>
    </Application.Resources>
</Application>
